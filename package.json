{
  "name": "timeoff-management-system",
  "version": "1.0.0",
  "description": "Comprehensive Timeoff Management System with modern tech stack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:db:push": "supabase db push",
    "supabase:db:reset": "supabase db reset",
    "supabase:db:reset:remote": "supabase db reset --linked",
    "supabase:db:fresh": "supabase db reset && supabase db push",
    "supabase:db:fresh:remote": "supabase db reset --linked && supabase db push",
    "supabase:gen:types": "supabase gen types typescript --project-id lvscrngetawbztaiadpr > packages/database/src/types.ts",
    "supabase:migration:run": "node scripts/run-migration.js",
    "supabase:migration:create": "node scripts/create-migration.js",
    "dev:start": "./scripts/dev-setup.sh start",
    "dev:stop": "./scripts/dev-setup.sh stop",
    "dev:restart": "./scripts/dev-setup.sh restart",
    "dev:install": "./scripts/dev-setup.sh install",
    "dev:status": "./scripts/dev-setup.sh status",
    "dev:logs": "./scripts/dev-setup.sh logs",
    "dev:clean": "./scripts/dev-setup.sh clean",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:prod": "docker compose up -d",
    "docker:prod:down": "docker compose down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.55.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.4",
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.85.0",
    "@tanstack/react-query-devtools": "^5.85.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
